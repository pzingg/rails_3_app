<%= simple_form_for(@user, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_number %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :password %>
    <%= f.input :status, :as => :check_boxes, :item_wrapper_class => 'inline', :collection => User::VALID_STATUS %>
    <%= f.input :roles,  :as => :check_boxes, :item_wrapper_class => 'inline', :collection => User::VALID_ROLES %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
