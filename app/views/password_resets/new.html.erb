<div class="page-header">
  <h1>Reset Password</h1>
</div>

<%= simple_form_for(:password_reset, :url => { :action => :create }, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email %>
  </div>
  
  <div class="form-actions">
    <%= f.submit 'Reset Password', :class => "btn-primary" %>
  </div>
<% end %>
